{
  "compilerOptions": {
    "baseUrl": "node_modules",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "https://cdn.jsdelivr.net/npm/@observablehq/plot@0.6/+esm": [
        "@observablehq/plot"
      ]
    }
  },
  "include": [
    "src/**/*.mjs",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
